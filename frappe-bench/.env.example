# VariPhi LMS Environment Configuration
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# =============================================================================
# Site Configuration
# =============================================================================
SITE_NAME=vgi.local
SITE_HOST=http://127.0.0.1:8000
APP_NAME=VariPhi

# =============================================================================
# Database Configuration
# =============================================================================
# For local development, use 127.0.0.1
# For Docker, use host.docker.internal (macOS/Windows) or 172.17.0.1 (Linux)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_TYPE=mariadb

# Database credentials (will be auto-generated if not set)
# Leave empty to auto-generate secure random credentials
DB_NAME=
DB_USER=
DB_PASSWORD=

# MariaDB root password (leave empty if no password)
MARIADB_ROOT_PASSWORD=

# =============================================================================
# Redis Configuration
# =============================================================================
# For local development, use 127.0.0.1 with ports 13000, 11000
# For Docker, use redis://redis:6379
REDIS_CACHE=redis://127.0.0.1:13000
REDIS_QUEUE=redis://127.0.0.1:11000
REDIS_SOCKETIO=redis://127.0.0.1:11000

# =============================================================================
# Server Configuration
# =============================================================================
WEBSERVER_PORT=8000
SOCKETIO_PORT=9000
FILE_WATCHER_PORT=6787
GUNICORN_WORKERS=9
BACKGROUND_WORKERS=1

# =============================================================================
# User Configuration
# =============================================================================
# Frappe user (your system username)
FRAPPE_USER=

# =============================================================================
# Development Settings
# =============================================================================
DEVELOPER_MODE=1
LIVE_RELOAD=true
SERVE_DEFAULT_SITE=true

# =============================================================================
# Security (Auto-generated, do not change manually)
# =============================================================================
# Encryption key will be auto-generated if not set
ENCRYPTION_KEY=

# =============================================================================
# Docker Configuration (only used in Docker)
# =============================================================================
# Set to true if running in Docker
DOCKER_MODE=false
